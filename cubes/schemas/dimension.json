{
    "$schema": "http://json-schema.org/schema",
    "title": "Dimension",
    "type": "object",

    "definitions": {
        "attribute": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "label": {"type": "string"},
                "description": {"type": "string"},
                "info": {"type": "object"},

                "format": {"type": "string"},
                "order": {"type": "string", "enum": ["asc", "desc"]},
                "missing_value": {
                    "title": "Missing value",
                    "type": ["string", "number", "null", "boolean"]
                },

                "locales": {
                    "type": "array",
                    "items": {"type": "string"}
                }
            },
            "required": ["name"],
            "additionalProperties": false
        }

    },

    "properties": {
        "name": {"type": "string"},
        "label": {"type": "string"},
        "template": {"type": "string"},
        "description": {"type": "string"},
        "info": {"type": "object"},

        "role": {"type": "string"},

        "nonadditive": {"type": "string"},
        "cardinality": {
            "type": "string",
            "enum":["tiny", "low", "medium", "high"]
        },

        "levels": {
            "type": "array",

            "items": {
                "title": "Level",
                "type": ["object", "string"],

                "properties": {
                    "name": {"type": "string"},
                    "label": {"type": "string"},
                    "description": {"type": "string"},
                    "info": {"type": "object"},

                    "role": {"type": "string"},
                    "cardinality": {
                        "type": "string",
                        "enum":["tiny", "low", "medium", "high"]
                    },

                    "key": {"type": "string"},
                    "label_attribute": {"type": "string"},
                    "order_attribute": {"type": "string"},

                    "attributes": {
                        "type": "array",
                        "items": {
                            "oneOf": [
                                {"type": "string"},
                                {"$ref": "#/definitions/attribute"}
                            ]

                        }
                    },

                    "order": {"type": "string", "enum": ["asc", "desc"]}

                },

                "required": ["name"],
                "additionalProperties": false

            }
        },

        "attributes": {
            "type": "array",
            "items": {
                "oneOf": [
                    {"type": "string"},
                    {"$ref": "#/definitions/attribute"}
                ]

            }
        },

        "hierarchies": {
            "title": "Hierarchies",
            "type": "array",

            "items": {
                "title": "Hierarchy",
                "type": "object",

                "properties": {
                    "name": {"type": "string"},
                    "label": {"type": "string"},
                    "description": {"type": "string"},
                    "info": {"type": "object"},

                    "levels": {
                        "type": "array",
                        "items": {"title": "Level", "type": "string"}
                    }
                },

                "required": ["name"],
                "additionalProperties": false
            }
        },

        "default_hierarchy_name": {
            "title": "Default Hierarchy Name",
            "type": "string"
        },

        "key": {"type": "string"},
        "label_attribute": {"type": "string"},
        "order_attribute": {"type": "string"}
    },

    "required": ["name"],
    "additionalProperties": false
}
