{
    "$schema": "http://json-schema.org/schema",
    "title": "Cube",
    "type": "object",

    "definitions": {
        "attribute_base": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "label": {"type": "string"},
                "description": {"type": "string"},
                "info": {"type": "object"},

                "format": {"type": "string"},
                "order": {"type": "string", "enum": ["asc", "desc"]},
                "missing_value": {
                    "title": "Missing value",
                    "type": ["string", "number", "null", "boolean"]
                }
            },
            "required": ["name"],
            "additionalProperties": false
        }
    },

    "properties": {
        "name": {"type": "string"},
        "label": {"type": "string"},
        "description": {"type": "string"},
        "category": {"type": "string"},
        "info": {"type": "object"},

        "fact": {"type": "string"},
        "key": {"type": "string"},
        "store": {"type": "string"},

        "browser_options": {"type": "object"},

        "measures": {
            "type": "array",
            "items": {
                "anyof": [
                    {"type": "string"},
                    {
                        "allof": [
                            {"$ref": "#/definitions/attribute_base"},
                            {
                                "properties": {
                                    "aggregates": {"type": "array"},
                                    "nonadditive": {"type": "string"},
                                    "expression": {"type": "string"}
                                }
                            }
                        ],
                        "additionalproperties": false
                    }
                ]

            }
        },

        "aggregates": {
            "type": "array",
            "items": {
                "anyof": [
                    {"type": "string"},
                    {
                        "allof": [
                            {"$ref": "#/definitions/attribute_base"},
                            {
                                "properties": {
                                    "expression": {"type": "string"},
                                    "function": {"type": "string"},
                                    "formula": {"type": "string"},
                                    "nonadditive": {"type": "string"},
                                    "measure": {"type": "string"}
                                }
                            }
                        ],
                        "additionalproperties": false
                    }
                ]

            }
        },

        "details": {
            "title": "Detail Attributes",
            "type": "array",
            "items": {
                "anyof": [
                    {"type": "string"},
                    {
                        "allof": [
                            {"$ref": "#/definitions/attribute_base"},
                            {
                                "properties": {
                                    "locales": {
                                        "type": "array",
                                        "items": {"type": "string"}
                                    }
                                }
                            }
                        ],
                        "additionalproperties": false
                    }
                ]

            }
        },

        "implicit_aggregates": {"type": "boolean"},

        "dimensions": {
            "title": "Dimensions",
            "type": "array",
            "items": {
                "title": "Dimension name",
                "type": ["string", "object"]
            }
        },

        "hierarchies": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "array",
                    "items": {
                        "title": "Hierarchy",
                        "type": "string"
                    }
                }
            }
        },

        "mappings": {"type": "object"},
        "joins": {"type": "array"}
    },

    "required": ["name"],
    "additionalProperties": false
}
